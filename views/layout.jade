!!! 5
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', type='text/css', href='stylesheet/reset.css')
        link(rel='stylesheet', type='text/css', href='stylesheet/fontface.css')
        link(rel='stylesheet', type='text/css', href='stylesheet/main.css')
        link(rel='stylesheet', type='text/css', href='stylesheet/bootstrap.css')
        link(rel='stylesheet', type='text/css', href='stylesheet/bootstrap-responsive.css')
        title Web Security Platform -  #{title}
    body
        div.page-header
            h1 Web Security Platform
        div.container
            div.row
                - if (typeof session.currentUser !== 'undefined' && title !== 'Message')
                    // sidebar menu
                    div.span2
                        div.side
                            div#menu
                                nav
                                    ul.nav.nav-list
                                        li.nav-header
                                            |Menu
                                        li.active
                                            a(href='/home')
                                                i.icon-home
                                                |Home
                                        li.nav-header
                                            |Applications
                                        li
                                            a(href='/stat')
                                                i.icon-th-list
                                                |System Monitor
                                        li
                                            a(href='/logout')
                                                i.icon-off
                                                |Log Out
                                        li.divider
                                        li
                                            |Help		

                // content
                div.span10
                    div#content
                        != body

        include includes/foot
